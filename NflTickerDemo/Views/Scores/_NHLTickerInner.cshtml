@using SportsTickerDemo.Models
@model IReadOnlyList<NHLTickerGame>
<div class="nhl-ticker">
    <div class="nhl-ticker-track">
        @foreach (var g in Model)
        {
            <div class="nhl-ticker-item">
                @if (!string.IsNullOrWhiteSpace(g.AwayLogo))
                {
                    <img class="team-logo" src="@g.AwayLogo" alt="@g.AwayTeam" decoding="async" />
                }
                <span class="team-name">@g.AwayTeam</span>
                <span class="team-score">@((g.AwayScore?.ToString()) ?? "-")</span>

                <span class="vs">vs</span>

                @if (!string.IsNullOrWhiteSpace(g.HomeLogo))
                {
                    <img class="team-logo" src="@g.HomeLogo" alt="@g.HomeTeam" decoding="async" />
                }
                <span class="team-name">@g.HomeTeam</span>
                <span class="team-score">@((g.HomeScore?.ToString()) ?? "-")</span>

                <span class="game-date">@g.StatusText</span>
            </div>
        }
    </div>
</div>